	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"justMyCode": true
		},
		{
			"name": "Python: main.py with test.txt input",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"justMyCode": true,
			// Custom
			"args": [
				"<",
				"${file}\b\b\b\b\b\b\b\b/test.txt"
			] // The backspace characters here only work with the name of the file being "main.py"
		}
	]
}